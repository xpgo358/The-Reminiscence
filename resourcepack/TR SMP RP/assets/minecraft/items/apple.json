{
    "model": {
        "type": "minecraft:condition",
        "property": "minecraft:using_item",
        "on_false": {
            "type": "minecraft:model",
            "model": "minecraft:item/apple"
        },
        "on_true": {
            "property": "minecraft:use_duration",
            "scale": 0.03,
            "type": "minecraft:range_dispatch",
            "entries": [
                {
                    "model": {
                        "type": "minecraft:model",
                        "model": "minecraft:item/food/apple/apple0"
                    },
                    "threshold": 0.2
                },
                {
                    "model": {
                        "type": "minecraft:model",
                        "model": "minecraft:item/food/apple/apple1"
                    },
                    "threshold": 0.4
                },
                {
                    "model": {
                        "type": "minecraft:model",
                        "model": "minecraft:item/food/apple/apple2"
                    },
                    "threshold": 0.6
                },
                {
                    "model": {
                        "type": "minecraft:model",
                        "model": "minecraft:item/food/apple/apple3"
                    },
                    "threshold": 0.8
                }
            ],
            "fallback": {
                "type": "minecraft:model",
                "model": "minecraft:item/apple"
            }
        }
    }
}