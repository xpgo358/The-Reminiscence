{
    "model": {
        "type": "minecraft:condition",
        "property": "minecraft:using_item",
        "on_false": {
            "type": "minecraft:model",
            "model": "minecraft:item/beetroot"
        },
        "on_true": {
            "property": "minecraft:use_duration",
            "scale": 0.03,
            "type": "minecraft:range_dispatch",
            "entries": [
                {
                    "model": {
                        "type": "minecraft:model",
                        "model": "minecraft:item/food/beetroot/beetroot0"
                    },
                    "threshold": 0.2
                },
                {
                    "model": {
                        "type": "minecraft:model",
                        "model": "minecraft:item/food/beetroot/beetroot1"
                    },
                    "threshold": 0.8
                }
            ],
            "fallback": {
                "type": "minecraft:model",
                "model": "minecraft:item/beetroot"
            }
        }
    }
}