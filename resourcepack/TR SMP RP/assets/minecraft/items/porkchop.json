{
    "model": {
        "type": "minecraft:condition",
        "property": "minecraft:using_item",
        "on_false": {
            "type": "minecraft:model",
            "model": "minecraft:item/porkchop"
        },
        "on_true": {
            "property": "minecraft:use_duration",
            "scale": 0.03,
            "type": "minecraft:range_dispatch",
            "entries": [
                {
                    "model": {
                        "type": "minecraft:model",
                        "model": "minecraft:item/food/porkchop/porkchop0"
                    },
                    "threshold": 0.3
                },
                {
                    "model": {
                        "type": "minecraft:model",
                        "model": "minecraft:item/food/porkchop/porkchop1"
                    },
                    "threshold": 0.55
                },
                {
                    "model": {
                        "type": "minecraft:model",
                        "model": "minecraft:item/food/porkchop/porkchop2"
                    },
                    "threshold": 0.8
                }
            ],
            "fallback": {
                "type": "minecraft:model",
                "model": "minecraft:item/porkchop"
            }
        }
    }
}